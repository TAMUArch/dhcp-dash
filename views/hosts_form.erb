<h3>Add new Host</h3>
<% if form.failed? %>
  <b><font color="red">Found invalid input, check your input and try again.</font></b>
  <br>
  <br>
<% end %>
<form action='/networksmgr/hosts_form' method='post' class="well">
  <b>Hostname:</b>&nbsp; <input type="text" name="hostname"><br>
   <b>IP:</b> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<input type="text" name="ip"><br>
   <b>MAC:</b> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; <input type="text" name="mac"><br>
   <p><b>Network:</b> &nbsp; &nbsp;
   <select name="net">
     <option value="FOC_NONE"></option>
     <% networks.each do |network| %>
     <option value=<%=network%>><%=network%></option>
     <% end %>
   </select>
   </p>
   <br><input type="submit" value="Submit">
</form>
