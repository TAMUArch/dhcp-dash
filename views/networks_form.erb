<h3>Add new Network</h3>
<% if form.failed? %>
<b><font color="red">Found invalid input, check your input and try again.</font></b>
<br>
<br>
<% end %>
  <form action="/networksmgr/networks_form" method="post" class="well">
    <table>
      <tr>
        <td align="left"><b>Domain: &nbsp;</b></td>
        <td align="left"><input type="text" name="domain"><br></td>
      </tr>
      <tr>
        <td align="left"><b>Network: &nbsp;</b></td>
        <td align="left"><input type="text" name="network"><br></td>
      </tr>
        <td align="left"><b>Netmask: &nbsp;</b></td>
        <td align="left"><input type="text" name="netmask"><br></td>
      </tr>
      <tr>
        <td align="left"><b>Gateway: &nbsp;</b></td>
        <td align="left"><input type="text" name="gateway"><br></td>
      </tr>
      <tr>
        <td align="left"><b>Nameservers: &nbsp;</b></td>
        <td align="left"><abbr title="Must be comma delimited with no spaces.">
            <input type="text" name="nameservers"></abbr><br></td>
      </tr>
      <tr>
        <td align="left"><br><input type="submit" value="Save"></td>
      </tr>
    </table>
   </form>
