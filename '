head
  h4 = @network.network
body
  .network
    -if not defined? @restricted_view
      .link.row
        .col-xs-12.col-sm-12
          abbr title="Delete Network"
            button.btn.btn-default.deleteNetwork style="float: right;" data-toggle="modal" data-target="#deleteNetworkModal"
              span.glyphicon.glyphicon-trash
          abbr title="Edit Network"
            button.btn.btn-default.editNetwork style="float: right;" data-toggle="modal" data-target="#editNetworkModal"
              span.glyphicon.glyphicon-pencil

    .domain.row
      .col-xs-4.col-sm-2
        .lbl Domain:
      .col-xs-3.col-sm-2
        .val = @network.domain
    .netmask.row
      .col-xs-4.col-sm-2
        .lbl Netmask:
      .col-xs-3.col-sm-2 
        .val = @network.netmask
    .gateway.row
      .col-xs-4.col-sm-2
        .lbl Gateway:
      .col-xs-3.col-sm-2 
        .val = @network.gateway
    .nameservers.row
      .col-xs-4.col-sm-2
        .lbl Nameservers:
      .col-xs-3.col-sm-2
        .val = @network.nameservers.join(",")
  .hosts
    table#hosts.table.table-bordered.table-striped
      thead
        tr
          th Hostname
          th IP
          th MAC
          - if not defined? @limited_view
            th
              abbr title="Add Host"
                button.btn.btn-default.addHost style="float: right;" data-toggle="modal" data-target="#addHostModal"
                  span.glyphicon.glyphicon-plus
      tbody
        - @network.hosts.each do |h,v|
          tr
            td = h
            td = v['ip']
            td = v['mac']
            - if not defined? @limited_view
              td
                button.btn.btn-default.editHost data-toggle="modal" data-hostname="#{h}" data-ip="#{v['ip']}" data-mac="#{v['mac']}"
                  span.glyphicon.glyphicon-pencil
                button.btn.btn-default.deleteHost data-toggle="modal" data-hostname="#{h}" data-ip="#{v['ip']}" data-mac="#{v['mac']}"
                  span.glyphicon.glyphicon-trash
  .modals
    .addNetworkModal#addNetworkModal.modal.fade role="dialog"
      .dialog.modal-dialog
        .content.modal-content
          form.form-horizontal role="form" action="/networks/new" method="POST"
            .header.modal-header
              h4.modal-title Add Network
            .body.modal-body
              .form-group
                label.col-sm-3.control-label for="network" Network:
                .col-sm-8
                  input#network.form-control name="network" type="text"
                  javascript:
                    var network = new LiveValidation('network');
                    network.add( Validate.Format, { pattern: /^\b((25[0-5]|2[0-4]\d|[01]?\d{1,2})\.){3}(25[0-5]|2[0-4]\d|[01]?\d{1,2})\b$/ } );
              .form-group
                label.col-sm-3.control-label for="domain" Domain:
                .col-sm-8
                  input#domain.form-control name="domain" type="text"
                  javascript:
                    var domain = new LiveValidation('domain');
                    domain.add( Validate.Format, { pattern: /^[a-z0-9]+([\-\.]{1}[a-z0-9]+)*\.[a-z]{2,6}$/i } );
              .form-group
                label.col-sm-3.control-label for="netmask" Netmask:
                .col-sm-8
                  input#netmask.form-control name="netmask" type="text"
                  javascript:
                    var netmask = new LiveValidation('netmask');
                    netmask.add( Validate.Format, { pattern: /^(((128|192|224|240|248|252|254)\.0\.0\.0)|(255\.(0|128|192|224|240|248|252|254)\.0\.0)|(255\.255\.(0|128|192|224|240|248|252|254)\.0)|(255\.255\.255\.(0|128|192|224|240|248|252|254)))$/ } );
              .form-group
                label.col-sm-3.control-label for="gateway" Gateway:
                .col-sm-8
                  input#gateway.form-control name="gateway" type="text"
                  javascript:
                    var gateway = new LiveValidation('gateway');
                    gateway.add( Validate.Format, { pattern: /^\b((25[0-5]|2[0-4]\d|[01]?\d{1,2})\.){3}(25[0-5]|2[0-4]\d|[01]?\d{1,2})\b$/ } );
              .form-group
                label.col-sm-3.control-label for="nameservers" Nameservers:
                .col-sm-8
                  abbr title="Must be comma delimited with no spaces."
                    input#nameservers.form-control name="nameservers" type="text"
                    javascript:
                      var nameservers = new LiveValidation('nameservers');
                      nameservers.add( Validate.Format, { pattern: /^(((25[0-5]|2[0-4]\d|[01]?\d\d?)\.){3}(25[0-5]|2[0-4]\d|[01]?\d\d?),?)+$/ } );
              .footer.modal-footer
                .form-group
                    button.btn.btn-default data-dismiss="modal" Cancel
                    button.btn.btn-primary type="submit" Save
    .editNetworkModal#editNetworkModal.modal.fade role="dialog"
      .dialog.modal-dialog
        .content.modal-content
