                    ipEdit.add( Validate.Format, { pattern: /^\b((25[0-5]|2[0-4]\d|[01]?\d{1,2})\.){3}(25[0-5]|2[0-4]\d|[01]?\d{1,2})\b$/ } );
              .form-group
                label.col-sm-3.control-label for="macEdit" MAC:
                .col-sm-6
                  input#macEdit.form-control name="mac" type="text"
                  javascript:
                    var macEdit = LiveValidation('macEdit');
                    macEdit.add( Validate.Format, { pattern: /^(?:[[:xdigit:]]{2}([:]))(?:[[:xdigit:]]{2}\1){4}[[:xdigit:]]{2}$/ } );
              .form-group
                .hidden-values
                  input#networkEdit type="hidden" name="network" value="#{@network.network}"
